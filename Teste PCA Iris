# Importando bibliotecas
from sklearn.datasets import load_iris
from sklearn.decomposition import PCA
import matplotlib.pyplot as plt
import numpy as np

# Carregar o conjunto de dados iris
iris = load_iris()
X = iris.data
y = iris.target 

# Aplicar PCA para reduzir as dimens천es para 2
pca = PCA(n_components=2)
X_pca = pca.fit_transform(X)

# Explicar a vari창ncia retida pelos dois primeiros componentes
explained_variance = pca.explained_variance_ratio_
print(f"Vari창ncia explicada pelos 2 primeiros componentes: {explained_variance}")
print(f"Total de vari창ncia explicada: {np.sum(explained_variance)}")

# Visualizar os dados reduzidos
plt.figure(figsize=(10, 8))
scatter = plt.scatter(X_pca[:, 0], X_pca[:, 1], c=y, cmap='viridis', alpha=0.7)
plt.colorbar(scatter, label='Classe')
plt.title("PCA aplicado ao conjunto de dados Iris")
plt.xlabel("Componente Principal 1")
plt.ylabel("Componente Principal 2")
plt.grid(True)
plt.show()
